<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="mongoimport.importer.factory" class="Devmachine\MongoImport\Bundle\ImporterFactory">
            <argument type="service" id="doctrine_mongodb" />
            <argument type="collection">
                <argument type="service" id="mongoimport.loader.json" />
            </argument>
        </service>

        <!-- Loaders -->

        <service id="mongoimport.loader.json" class="Devmachine\MongoImport\Loader\JsonLoader" public="false" />

        <service id="mongoimport.loader.csv" class="Devmachine\MongoImport\Loader\CsvLoader" public="false" />

        <!-- Builders -->

        <service id="mongoimport.importer"
                 class="Devmachine\MongoImport\Importer"
                 abstract="true">
            <factory service="mongoimport.importer.factory" method="getImporter" />
            <argument />
        </service>

    </services>
</container>
